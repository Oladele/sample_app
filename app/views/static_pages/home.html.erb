
<% if signed_in? %>
	<div class = "row" >
		<section>
			<%= render 'shared/user_info' %>
			<span>
				<ul id="myTab" class="nav nav-tabs">
				  <li class="active"><a href="#microposts" data-toggle="tab">Microposts</a></li>
				  <li><a href="#workouts" data-toggle="tab">Workouts</a></li>
				</ul>
			</span>
		</section>
		<div id="myTabContent" class="tab-content">
	    <div class="tab-pane fade active in" id="microposts">	    
				<%= render 'shared/micropost_mashup' %>
			</div>
	    <div class="tab-pane fade" id="workouts">
	      <p> Awesome workouts display here </p>
	      <script>
			  $(function() {
			    $( "#datepicker" ).datepicker({
			      altField: "#alternate",
			      altFormat: "DD, d MM, yy"
			    });
			  });
			  </script>
	      <p>Date: <input type="text" id="datepicker" />&nbsp;<input type="text" id="alternate" size="30" /></p>

	    </div>
	  </div>	
	</div>
<% else %>
	<div class="center hero-unit">
		<h1>Welcome to the Sample App</h1>
		<h2>
		  This is the home page for the
		  <a href="http://railstutorial.org/">Ruby on Rails Tutorial</a>
		  sample application.
		</h2>

		<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
	</div>

	<%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>