<% provide(:title, 'Exercises') %>

<h1>Exercise Categories</h1>

<div class="row">
  <div class="span8">
    <h3>Categories(<%= @exercise_categories.count %>)</h3>
    <% if @exercise_categories.any? %>      
      <div class="row">
          <div class="span6">
            <%= render @exercise_categories %>
          </div>
      </div>
    <% end %>
  </div>
</div>

<h3>
<%= link_to "Add New Exercise Category", new_exercise_category_path, class: "btn btn-large" %>
</h3>
